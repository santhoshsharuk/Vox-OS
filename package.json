{
  "name": "vox-os",
  "private": true,
  "version": "1.0.0",
  "description": "Vox . OS - A Web-Based Desktop Operating System Experience",
  "author": "Vox . OS Team",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "concurrently \"cross-env BROWSER=none vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.voxos.desktop",
    "productName": "Vox . OS",
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "electron-preload.cjs",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/vite.svg"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/vite.svg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.0.0",
    "electron-builder": "^25.1.8",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.2",
    "speech-to-text": "^3.0.2",
    "vosk-browser": "^0.0.8",
    "ws": "^8.18.3"
  }
}
